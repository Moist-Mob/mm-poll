{% layout "default" %}

{% block content %}
  <div class="flex flex-col min-w-30">
    {% render "poll-title"
      , title: poll.title
      , remaining: remaining
      , eligible_msg: eligible_msg %}
    <p>The poll is ongoing, but you've already voted. Here's how you voted:</p>
    <ol id="ranked-votes" class="relative mb-4 my-0 py-4 pl-10 w-30 text-zinc-200 bg-sky-700 rounded-xl [&:has(li)_.help]:hidden [&_li]:hover:!bg-transparent [&_li]:pl-2 [&_li]:m-0">
      {% for rank in vote.ranks %}
        <li class="py-1 w-full">
          <div class="flex flex-row flex-nowrap items-center gap-2">
            {{ rank.name | escape }}
          </div>
        </li>
      {% endfor %}
    </ol>
  </div>
{% endblock %}