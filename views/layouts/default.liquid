<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png">
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png">
    <link rel="stylesheet" href="/css/style.css">
    <title>{{ title | escape }}</title>
  </head>
  <body class="bg-sky-900 text-zinc-300">
    <div class="flex flex-col">
      <nav>
        {% render "navbar"
          , user: user
          , admin: admin
          , poll: poll %}
      </nav>
      <div class="content mt-8 p-4 prose prose-zinc prose-invert mx-auto w-full max-w-screen-sm">
        {% block content %}
        {% endblock %}
      </div>
    </div>
    {% block footer %}
    {% endblock %}
    <!-- Alpine Core -->
    <script defer src="//cdn.jsdelivr.net/npm/@ryangjchandler/alpine-clipboard@2.3.0/dist/alpine-clipboard.js"></script>
    <script defer src="//cdn.jsdelivr.net/npm/alpinejs@3.14.3/dist/cdn.min.js"></script>
  </body>
</html>