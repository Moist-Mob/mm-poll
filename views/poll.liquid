{% layout "default" %}

{% block footer %}
  <!-- Alpine Plugins -->
  <script defer src="//cdn.jsdelivr.net/npm/@alpinejs/sort@3.14.3/dist/cdn.min.js"></script>

  <!-- Alpine Core -->
  <script defer src="//cdn.jsdelivr.net/npm/alpinejs@3.14.3/dist/cdn.min.js"></script>
{% endblock %}


{% block content %}
  {% if vote.ranks.length == 0 %}
    {% render 'submit-vote'
      , vote: vote
      , localId: localId %}
  {% else %}
    {% render 'show-vote'
      , vote: vote
      , localId: localId %}
  {% endif %}
{% endblock %}